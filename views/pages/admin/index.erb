<table class="table table-hover table-condensed tablesorter table-striped" >
    <thead><tr>
        <th>Name</th>
        <th>Email</th>
    </tr></thead>
    <tbody>
    
    <% @users.each do |user| %>

    <tr>
        <td><%= user.fname %> <%= user.lname %></td>
        <td><%= user.email %></td>
        <td><a href="/account/<%= user.id %>/edit">Edit</a></td>
    </tr>

    <% end %>

    </tbody>
</table>

<a class="btn" href="/account/new">Add Account</a>
